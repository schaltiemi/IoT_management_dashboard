<div class="content-wrapper" style="min-height: 946px;">
  <section class="content">
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <div class="box-header">
            <h3 class="box-title">Devices</h3>
          </div><!-- /.box-header -->
          <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
              <tbody>
              <tr>
                <th>UID</th>
                <th>Name</th>
                <th></th>
                <th>Activation</th>
                <th>Remove</th>
              </tr>
              <tr>
                <div class="box-footer">
                  <button id="add-device" class="btn btn-success"><i class="fa fa-plus"></i></button>
                  <input id="new-device-name" type="text" placeholder="Name">
                  <input id="input-uid" type="text" disabled="disabled" placeholder="UID">
                  <button id="button-uid" class="btn btn-default"><i class="fa fa-refresh fa-spin"></i></button>
                </div>
              </tr>
              {{#each devices}}
                <tr>
                  <td>{{uid}}</td>
                  <td>
                    <div id="name-device{{@index}}">{{name}}</div>
                  </td>
                  <td>
                    <button id="rename-button{{@index}}" class="rename-button" class="btn btn-box-tool"><i
                        class="fa fa-pencil"></i></button>
                  </td>
                  {{#if state}}
                    <td>
                      <input id="activation-button{{@index}}" type="checkbox" name="my-checkbox" class="activation-button" data-size="mini" checked>
                    </td>
                  {{else}}
                    <td>
                      <input id="activation-button{{@index}}" class="activation-button" type="checkbox" name="my-checkbox" data-size="mini"
                             data-devicestate={{_state}}>
                    </td>
                  {{/if}}
                  <td>
                    <button data-deviceID={{_id}} id="delete-device-button{{@index}}"
                            class="btn btn-box-tool delete-device"><i class="fa fa-times"></i></button>
                  </td>
                </tr>
              {{/each}}
              </tbody>
            </table>
          </div><!-- /.box-body -->
        </div><!-- /.box -->
      </div>
    </div>
  </section>
</div>